{% extends "_layouts/cp" %}
{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("welove9am\\docrequest\\assetbundles\\documentrequest\\DocumentRequestAsset") %}
{% do view.registerAssetBundle("welove9am\\docrequest\\assetbundles\\documentrequestcpsection\\DocumentRequestCPSectionAsset") %}

{# Link for the ? icon at the bottom of the page #}
{% set docsUrl = "https://github.com/andparsons/document-request/blob/master/README.md" %}

{# The title of this CP section #}
{% set title = "DocumentRequest" %}

{# The URL to this plugin's base CP section #}
{% set pluginCpUrl = url('document-request') %}

{# Get a URL to an image in our AssetBundle #}
{% set iconUrl = view.getAssetManager().getPublishedUrl('@welove9am/docrequest/assetbundles/documentrequestcpsection/dist', true) ~ '/img/DocumentRequest-icon.svg' %}

{# Content that should appear in the page header#}
{% set extraPageHeaderHtml %}
    <div class="buttons">
        <a href="{{ pluginCpUrl }}" class="btn submit add icon">{{ "Click Me!"|t('document-request') }}</a>
    </div>
{% endset %}

{# The content of the CP Section#}
{% set content %}
    <h2>{{ "DocumentRequest CP Section body goes here"|t('document-request') }}</h2>
    <img src="{{ iconUrl }}" height="64" width="64" />
    <p class="textline"></p>
{% endset %}
